<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TonWalletActivities" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ton_blue</item>
        <item name="colorPrimaryVariant">@color/ton_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Font-->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ton_blue</item>
        <item name="colorSecondaryVariant">@color/ton_blue</item>
        <item name="colorOnSecondary">@color/ton_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.TonWalletActivities.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/ton_blue</item>
    </style>
</resources>