<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.start.StartScreenWalletFragment">

<TextView
    android:id="@+id/ton_wallet_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:textAlignment="center"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="20sp"
    android:text="@string/ton_wallet"
    />

<LinearLayout
    android:id="@+id/ton_image_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ton_wallet_title"
    >
    <ImageView
        android:id="@+id/ton_wallet_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/tonlogo"
        android:src="@drawable/tonlogo"
        android:contentDescription="@string/ton_wallet" />
</LinearLayout>


<TextView
    android:id="@+id/ton_wallet_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:textAlignment="center"
    android:textSize="20sp"
    android:text="@string/ton_wallet_description"
    app:layout_constraintTop_toBottomOf="@id/ton_image_layout" />

<Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ton_wallet_create_wallet"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/importWalletButton"

    />

<Button
    android:id="@+id/importWalletButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ton_wallet_import"
    android:layout_marginBottom="60dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>